extends layout

block content
  div(data-role='page')
    header(data-role='header')
      h1= title
    div(data-role='content')
      //Our video div
      div#video
        //Iframe from  youtube which serves the right media object for the device in use
        iframe(width="100%", height=215, src="http://www.youtube.com/embed/" + vid, frameborder="0", allowfullscreen)
        video (controls)
        source (src="http://www.metao.ir:3000/watch/"+vid, type="video/mp4")
        source (src="http://www.metao.ir:3000/watch/"+vid, type="video/webm")
        source (src="http://www.metao.ir:3000/watch/"+vid, type="video/ogg")
        <!-- fallback -->
        Your browser does not support the <code>video</code> element.
      div
        a(href='/nodetube', class='ui-btn ui-shadow').
          Videos
        a(href='/', class='ui-btn ui-shadow').
          Home
